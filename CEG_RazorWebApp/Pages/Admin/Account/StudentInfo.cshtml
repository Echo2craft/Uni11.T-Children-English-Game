            var url = `/Admin/${data.parent.account.role.roleName}/${data.parent.account.accountId}/Info`
            // Parent Info
            $('#account-parent-status').empty();

            $('#account-parent-id').text(data.parent.account.accountId);
            $('#account-parent-id').attr('href', url);
            $('#account-parent-fullname').text(data.parent.account.fullname);
            $('#account-parent-gender').text(data.parent.account.gender);
            $('#account-parent-status').append(getStatusDisplay(data.parent.account.status));
