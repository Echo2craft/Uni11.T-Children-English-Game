            $('select[id="updateStudent_Account_Gender"]').empty();

            $('input[id="updateStudent_Account_Fullname"]').val(data.account.fullname);
            $('select[id="updateStudent_Account_Gender"]').append(getGenderOptions(data.account.gender));
            $('textarea[id="updateStudent_Description"]').val(data.description);
            $('input[id="updateStudent_Birthdate"]').val(formatDate(data.birthdate, { inputDateFormat : true }));

