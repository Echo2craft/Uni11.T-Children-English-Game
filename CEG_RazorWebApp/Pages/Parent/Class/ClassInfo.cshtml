        function callApiGetStudentNameList(id) {
            $.ajax({
                url: apiUrl + 'Student/All/Fullname/ByParent' + id, // API endpoint
                type: 'GET',
                headers: {
                    'Authorization': 'Bearer ' + token// Include the JWT token
                },
